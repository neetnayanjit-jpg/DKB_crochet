<script>
  // ---------- sample data ----------
  const products = [
    {id:1,name:'Small Crochet Bokay - Pink',category:'bokay',price:120,rating:4.5,stock:12,img:'https://via.placeholder.com/420x300?text=Bokay+Pink'},
    {id:2,name:'Big Crochet Bokay - Red',category:'bokay',price:350,rating:4.8,stock:5,img:'https://via.placeholder.com/420x300?text=Bokay+Red'},
    {id:3,name:'Crochet Hair Clip - Blue',category:'hair',price:45,rating:4.2,stock:30,img:'https://via.placeholder.com/420x300?text=Hair+Clip+Blue'},
    {id:4,name:'Crochet Band - Set of 2',category:'hair',price:80,rating:4.1,stock:20,img:'https://via.placeholder.com/420x300?text=Hair+Band+Set'},
    {id:5,name:'Flower Tab - Single',category:'flower',price:25,rating:3.9,stock:50,img:'https://via.placeholder.com/420x300?text=Flower+Tab'},
    {id:6,name:'Crochet Bag - Handcrafted',category:'bag',price:450,rating:4.7,stock:3,img:'https://via.placeholder.com/420x300?text=Crochet+Bag'},
    {id:7,name:'Budget Bag - Small',category:'bag',price:200,rating:4.0,stock:10,img:'https://via.placeholder.com/420x300?text=Budget+Bag'}
  ];
  const categories = [
    {id:'bokay',label:'Bokay (small & big)',img:'https://via.placeholder.com/120?text=Bokay'},
    {id:'hair',label:'Hair clip / Band',img:'https://via.placeholder.com/120?text=Hair'},
    {id:'flower',label:'Flower tab',img:'https://via.placeholder.com/120?text=Flower'},
    {id:'bag',label:'Bag',img:'https://via.placeholder.com/120?text=Bag'}
  ];
  const suggested = [
    {label:'Art Craft Kit',img:'https://via.placeholder.com/200x120?text=Art+Craft+Kit'},
    {label:'Wardrobes',img:'https://via.placeholder.com/200x120?text=Wardrobes'},
    {label:'Laptops',img:'https://via.placeholder.com/200x120?text=Laptops'},
    {label:'Gift Ideas',img:'https://via.placeholder.com/200x120?text=Gifts'},
  ];

  // ---------- slider ----------
  const slidesEl = document.getElementById('slides');
  const dotsEl = document.getElementById('dots');
  const slidesCount = slidesEl.children.length;
  let slideIndex = 0;
  function makeDots(){
    for(let i=0;i<slidesCount;i++){
      const d = document.createElement('div');
      d.className='dot' + (i===0? ' active':'');
      d.onclick = ()=> goToSlide(i);
      dotsEl.appendChild(d);
    }
  }
  function goToSlide(i){
    slideIndex = i;
    slidesEl.style.transform = `translateX(-${i*100}%)`;
    Array.from(dotsEl.children).forEach((n,idx)=> n.classList.toggle('active', idx===i));
  }
  function nextSlide(){ goToSlide((slideIndex+1) % slidesCount); }
  let slideTimer = setInterval(nextSlide, 4500);
  // pause on hover
  document.getElementById('slider').addEventListener('mouseenter', ()=> clearInterval(slideTimer));
  document.getElementById('slider').addEventListener('mouseleave', ()=> slideTimer = setInterval(nextSlide, 4500));
  makeDots();

  // ---------- render suggested ----------
  const sRow = document.getElementById('suggestedRow');
  suggested.forEach(s=>{
    const el = document.createElement('div');
    el.className='h-item';
    el.innerHTML = `<img src="${s.img}" alt="${s.label}"><div class="label">${s.label}</div>`;
    sRow.appendChild(el);
  });

  // ---------- render categories ----------
  const catsWrap = document.getElementById('categories');
  categories.forEach(c=>{
    const el = document.createElement('div');
    el.className='cat';
    el.innerHTML = `<img src="${c.img}" alt="${c.label}"><div class="ctext">${c.label}</div>`;
    el.onclick = ()=> filterByCategory(c.id);
    catsWrap.appendChild(el);
  });

  // ---------- products grid ----------
  const prodGrid = document.getElementById('prodGrid');
  function renderProducts(list = products){
    prodGrid.innerHTML = '';
    list.forEach(p=>{
      const el = document.createElement('div');
      el.className='prod';
      el.innerHTML = `<img src="${p.img}" alt="${p.name}"><div class="pname">${p.name}</div><div class="pmeta"><div class="price">‚Çπ${p.price}</div><div class="small">‚≠ê${p.rating}</div></div>`;
      el.onclick = ()=> alert('Click product to view details (not on homepage).');
      prodGrid.appendChild(el);
    });
  }
  renderProducts();

  // ---------- search ----------
  const searchInput = document.getElementById('searchInput');
  document.getElementById('searchBtn').addEventListener('click', doSearch);
  searchInput.addEventListener('keydown', (e)=>{ if(e.key==='Enter') doSearch(); });
  function doSearch(){
    const q = searchInput.value.trim().toLowerCase();
    if(!q){ renderProducts(); return; }
    const filtered = products.filter(p=> p.name.toLowerCase().includes(q) || p.category.toLowerCase().includes(q));
    renderProducts(filtered);
    // optionally show a visual toast (simple)
    if(filtered.length===0) alert('No products match "'+q+'"');
  }

  // ---------- category filter ----------
  function filterByCategory(cat){
    const list = products.filter(p=> p.category === cat);
    renderProducts(list);
    // scroll to products
    window.scrollTo({top:document.querySelector('#prodGrid').offsetTop - 100, behavior:'smooth'});
  }

  // ---------- init ----------
  document.getElementById('year').textContent = new Date().getFullYear();
</script>
</body>
